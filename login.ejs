<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Website</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #262626;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .container {
      background-color: #333;
      padding: 40px;
      width: 30%;
      border-radius: 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
    }
    h2 {
      font-size: 2.5rem;
      text-align: center;
      color: #fff;
      margin-bottom: 30px;
    }
    form {
      background-color: #444;
      padding: 50px;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.8);
    }
    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 15px;
      margin-bottom: 20px;
      border: 1px solid #666;
      border-radius: 50px;
      font-size: 1rem;
      background-color: #555;
      color: #ccc;
    }
    button {
      padding: 15px 30px;
      width: 100%;
      border: none;
      font-size: 1rem;
      background-color: #6ab04c;
      color: #fff;
      border-radius: 50px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      background-image: linear-gradient(to right, #56ccf2, #2f80ed);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }
    button:hover {
      background-color: #4d8732;
      background-image: none;
    }
    .form-group {
      margin-bottom: 20px;
    }
    .error {
      color: red;
      margin-bottom: 15px;
    }
    #toggleButton {
      text-align: center;
      cursor: pointer;
      margin-top: 20px;
      font-size: 1rem;
      color: #ccc;
      transition: color 0.3s ease;
    }
    #toggleButton:hover {
      color: #fff;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 id="formTitle">Login</h2>
    <div class="input">
      <form id="authForm" action="/log-in" method="POST">
        <div class="form-group">
          <input type="email" name="email" placeholder="Email" required />
        </div>
        <div class="form-group">
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>
        <button type="submit" id="formButton">Login</button>
      </form>
      <form
        id="signupForm"
        action="/register"
        method="POST"
        style="display: none"
      >
        <div class="form-group">
          <input type="email" name="email" placeholder="Email" required />
        </div>
        <div class="form-group" id="usernameField">
          <input
            type="text"
            name="username"
            placeholder="Username"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>
        <button type="submit">Signup</button>
      </form>
    </div>
    <div id="toggleButton">New to us? Click here to Signup</div>
  </div>

  <script>
    const formTitle = document.getElementById("formTitle");
    const authForm = document.getElementById("authForm");
    const signupForm = document.getElementById("signupForm");
    const usernameField = document.getElementById("usernameField");
    const formButton = document.getElementById("formButton");
    const toggleButton = document.getElementById("toggleButton");

    toggleButton.addEventListener("click", () => {
      if (authForm.style.display === "none") {
        formTitle.textContent = "Login";
        authForm.style.display = "block";
        signupForm.style.display = "none";
        formButton.textContent = "Login";
        toggleButton.textContent = "New to us? Click here to Signup";
      } else {
        formTitle.textContent = "Signup";
        authForm.style.display = "none";
        signupForm.style.display = "block";
        formButton.textContent = "Signup";
        toggleButton.textContent =
          "Already have an account? Click here to Login";
      }
    });
  </script>
</body>
</html>